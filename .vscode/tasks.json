{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server & Open Preview",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local:.*http://localhost:3000"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Open Simple Browser",
      "type": "shell",
      "command": "open http://localhost:3000",
      "presentation": {
        "reveal": "never"
      },
      "dependsOn": "Start Dev Server & Open Preview"
    }
  ]
}


